<view class="v1">
 
 <!-- v2父容器  子view使用绝对布局 -->
   <view class="v2">
     <view class="dltext">登录</view>
  
     <!-- 手机号 -->
     <view class="phoneCs">
       <image src="/icons/account.png" class="ph"></image>
       <input placeholder="请输入帐号" bindinput="bindAccountInput" />
     </view>
  
     <!-- 密码 -->
     <view class=passwordCs">
       <image src="/icons/password.png" class="ps"></image>
       <input placeholder="请输入密码"  bindinput="bindPasswordInput" />
     </view>
  
     <!-- 注册 和忘记密码  -->
     <view class="zhuce">
       <navigator bindtap="navToReg">立即注册</navigator>
       
     </view>
  
     <!-- 登录按钮 -->
     <view class="denglu">
       <button class="btn-dl" type="primary" bindtap="login" disabled="{{disabled}}">登录</button>
     </view>
  
     <!-- 协议区  xieyi -->
     <view class="xieyi">
      <checkbox-group  bindchange="checkboxChange">
       <checkbox class="isXY"  checked="{{checked}}"></checkbox>
       </checkbox-group>
       <view class="text-xy">同意小程序的《使用协议》</view>
     </view>
   </view>  
 <!-- 提示框  使用以下方式登录 -->  
 </view>
  